#macro PlayChannel 1

group _SubMusic

	string Playing
	var MusObject
	table pushed = {}
	
	void Play(string File)
		Audio.Chat=true // Debug
		File=File:upper()
		if Playing==File
			return
		end
		cout("Loading music: ",file,"\n")
		MusObject = Audio.Load(File)
		Playing=File
		MusObject.Play(PlayChannel,true)
		print("Playing on channel: PlayChannel")
	end
	
	void Stop()
		if Playing==""
			return
		end
		Print("Stopping music on channel: PlayChannel")
		Audio.Stop(PlayChannel)
		Playing=""
	end
	
	void Push()
		if Playing==""
			return
		end
		pushed += Playing
	end
	
	void Pop()
		if #pushed==0
			return
		end
		string popped = pushed[#pushed]
		pushed[#pushed]=nil
		Play(Popped)
	end
	
	void PopVoid()
		if #pushed==0
			return
		end
		string popped = pushed[#pushed]
		pushed[#pushed]=nil
	end
end